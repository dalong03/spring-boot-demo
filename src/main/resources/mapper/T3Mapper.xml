<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fb.springbootdemo.repository.T3Repository">

	<sql id="baseColumns">
		id, name, birthday
	</sql>

	<sql id="condition">
		<where>
			<if test="e != null">
				<if test="e.id != null">
					and id = ${e.id}
				</if>
				<if test="e.name != null and e.name neq ''">
					and name = #{e.name}
				</if>
			</if>
		</where>
	</sql>

	<select id="findById" resultType="t3">
		select * from t3 where id = #{id}
	</select>

	<select id="findPage" resultType="t3">
		select * from
		(select * from t3
		<include refid="condition"></include>
		) t
		limit
		#{pageInfo.startIndex}, #{pageInfo.endIndex}
	</select>

	<update id="update">
		update t3 set balance = #{balance} where id = #{id}
	</update>

</mapper>